<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"

    >


    <ImageView
        android:id="@+id/pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/marginLayout"
        android:layout_marginTop="@dimen/marginLayout"
        android:layout_marginEnd="@dimen/marginLayout"
        android:layout_marginBottom="@dimen/marginLayout"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_group_15" />

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_below="@id/pic"
        android:layout_marginTop="@dimen/margin_30dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save your money conveniently"
            android:textAlignment="inherit"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/satoshi_bold"
            android:textSize="21sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:layout_marginTop="10dp"
            android:text="Get 5% cash back for each\ntransaction and spend it easily"
            android:textAlignment="inherit"
            android:textColor="@android:color/black"
            android:fontFamily="@font/satoshi_regular"
            android:lineHeight="19dp"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>